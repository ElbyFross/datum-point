<UserControl x:Class="WpfHandler.UI.Controls.Logon.RegistrationPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfHandler.UI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid x:Name="main" Loaded="LogonPanel_Loaded">
        <StackPanel x:Name="regPanel_FormBlock" 
                        Orientation="Vertical" 
                        VerticalAlignment="Bottom" 
                        HorizontalAlignment="Center" 
                        Margin="{Binding RegFormMargin}" 
                        Width="{Binding RegFormWidth}"
                        Grid.RowSpan="3">

            <Label  Grid.Column="0" 
                        FontSize="30.5" 
                        FontWeight="Light" 
                        HorizontalAlignment="Center" 
                        Margin="-0.5,0.5" 
                        Foreground="#003459" 
                        Content="NEWEST MEMBER" />

            <Label Height="20"/>

            <!--Login field-->
            <local:FlatTextBox x:Name="regLoginField"
                                   Lable="Login *" 
                                   Background="Transparent"
                                   Text="login@mail.com"
                                   LableWidth="120"
                                   FontSize="15"/>

            <!--Password field-->
            <local:FlatPasswordBox x:Name="regPasswordField"
                                   Lable="Password *" 
                                   Background="Transparent" 
                                   Text="password"
                                   LableWidth="120"
                                   FontSize="15"/>

            <!--Password field-->
            <local:FlatPasswordBox x:Name="regPasswordField2"
                                   Lable="Repeat passord *" 
                                   Background="Transparent"
                                   Text="password"
                                   LableWidth="120"
                                   FontSize="15"/>

            <!--First name-->
            <local:FlatTextBox x:Name="regFNameField"
                                   Lable="First name *" 
                                   Background="Transparent"
                                   Text=""
                                   LableWidth="120"
                                   FontSize="15"/>

            <!--Optional middle name-->
            <local:FlatTextBox x:Name="regMNameField"
                                   Lable="Middle name" 
                                   Background="Transparent"
                                   Text=""
                                   LableWidth="120"
                                   FontSize="15"/>

            <!--Last name-->
            <local:FlatTextBox x:Name="regLNameField"
                                   Lable="Last name *" 
                                   Background="Transparent"
                                   Text=""
                                   LableWidth="120"
                                   FontSize="15"/>

            <!--Tip lable-->
            <Label Grid.Column="0" 
                FontSize="{Binding FontSize}" 
                FontWeight="Light" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Center"
                Foreground="#003459" 
                Margin="0,-10,0,0"
                Content="Fileds with * required" />

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="75"/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <!--Back to login button-->
                <local:FlatButton x:Name="regBack"
                                      Text="Back"  
                                      Background="Transparent"
                                      HorizontalAlignment="Left" 
                                      FontSize="15"
                                      Grid.Column="1" 
                                      Width="60"/>

                <!--Continue registration button-->
                <local:FlatButton x:Name="regContinue"
                                      Text="Continue" 
                                      Background="Transparent"
                                      HorizontalAlignment="Right" 
                                      FontSize="15"
                                      Grid.Column="2" 
                                      Width="70"/>
            </Grid>
        </StackPanel>

        <!--Errors messages-->
        <StackPanel Margin="0,10,0,0" VerticalAlignment="Bottom">
            <Label x:Name="regPanel_lPNF"
                    Grid.Column="0" 
                    FontSize="14" 
                    FontWeight="Light" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Center"
                    Foreground="Red" 
                    Margin="0,-10,0,0"
                    Content="Passwords not match"/>

            <Label x:Name="regPanel_lFAF"
                    Grid.Column="0" 
                    FontSize="14" 
                    FontWeight="Light" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Center"
                    Foreground="Red" 
                    Margin="0,-10,0,0"
                    Content="Fill all fields with *" />
        </StackPanel>
    </Grid>
</UserControl>
