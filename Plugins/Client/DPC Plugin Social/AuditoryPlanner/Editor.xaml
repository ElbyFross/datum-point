                    <TextBlock TextWrapping="Wrap" 
                               Width="278" 
                               Text="-ExampleExampleExampleExampleExampleExample ExampleExampleExampleExampleExample"/>
                </ListBox>
            </Grid>

            <Grid x:Name="legend"
                  Grid.Column="0"
                  Background="WhiteSmoke"
                  VerticalAlignment="Bottom">
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="27"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid Background="White" Margin="2,2,2,2"/>
                <Label Content="Legend" 
                       FontWeight="Thin"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

                <ListBox Grid.Row="1" BorderThickness="0" Background="Transparent">
                    <Label Content="Example"/>
                    <Label Content="Example"/>
                    <Label Content="Example"/>
                    <Label Content="Example"/>
                </ListBox>
            </Grid>
