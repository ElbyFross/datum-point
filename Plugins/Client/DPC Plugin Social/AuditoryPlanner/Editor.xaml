             xmlns:local="clr-namespace:DatumPoint.Plugins.Social.AuditoryPlanner"
             xmlns:wpfHandler="clr-namespace:WpfHandler.UI.Controls;assembly=WpfHandler"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Name="main"
             Background="White">

