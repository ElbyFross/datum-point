    <Grid Margin="0.5,0,0,0">
        <Grid x:Name="workspace">
            <Grid.RowDefinitions>
                <RowDefinition x:Name="controlPanelRow" Height="20"/>
                <RowDefinition Height="0.5"/>
                <!--<RowDefinition x:Name="configPanelRow" Height="15"/>
                <RowDefinition Height="1"/>-->
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!--
            - Editing of existing schema
            - Creating new schema
            - Openning help overlay
            -->            
            <Grid x:Name="controlPanel">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition MinWidth="300"/>
                    <ColumnDefinition MaxWidth="300"/>
                </Grid.ColumnDefinitions>

                <ComboBox Grid.Column="1" BorderThickness="0"></ComboBox>

                <Grid Grid.Column="0">
                    <StackPanel Orientation="Horizontal">
                        <wpfHandler:FlatButton 
                                      Text="Save" 
                                      Background="Transparent"
                                      HorizontalAlignment="Right" 
                                      FontSize="15"
                                      Grid.Column="2" />
                        <Canvas Width="0.5" Background="Gray"/>
                        <wpfHandler:FlatButton 
                                      Text="New" 
                                      Background="Transparent"
                                      HorizontalAlignment="Right" 
                                      FontSize="15"
                                      Grid.Column="2"/>
                        <Canvas Width="0.5" Background="Gray"/>
                        <wpfHandler:FlatButton  
                                      Text="Info" 
                                      Background="Transparent"
                                      HorizontalAlignment="Right" 
                                      FontSize="15"
                                      Grid.Column="2" 
                                      ClickCallback="InfoCallback"/>
                        <Canvas Width="0.5" Background="Gray"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Canvas Width="0.5" Background="Gray"/>
                        <wpfHandler:FlatButton 
                                      Text="Normal" 
                                      Background="Transparent"
                                      HorizontalAlignment="Right" 
                                      FontSize="15"
                                      Grid.Column="2" />
                        <Canvas Width="0.5" Background="Gray"/>
                        <wpfHandler:FlatButton 
                                      Text="Hide" 
                                      Background="Transparent"
                                      HorizontalAlignment="Right" 
                                      FontSize="15"
                                      Grid.Column="2" />
                        <Canvas Width="0.5" Background="Gray"/>
                        <wpfHandler:FlatButton 
                                      Text="Block" 
                                      Background="Transparent"
                                      HorizontalAlignment="Right" 
                                      FontSize="15"
                                      Grid.Column="2" />
                    </StackPanel>

                    <!--<StackPanel Orientation="Horizontal"  HorizontalAlignment="Right">
                        <wpfHandler:FlatButton BorderThickness="0" Width="{Binding Height, ElementName=controlPanelRow}" Content="Normal"/>
                        <Canvas Width="1"/>
                        <wpfHandler:FlatButton BorderThickness="0" Width="{Binding Height, ElementName=controlPanelRow}" Content="Hide"/>
                        <Canvas Width="1"/>
                        <wpfHandler:FlatButton BorderThickness="0" Width="{Binding Height, ElementName=controlPanelRow}" Content="Block"/>
                    </StackPanel>-->
                </Grid>
            </Grid>

            <Grid Background="Gray" Grid.Row="1"/>
            <Grid Background="Gray" Grid.Row="3"/>

            <!--<Grid x:Name="configPanel" 
                  Grid.Row="2" 
                  Background="White">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="{Binding Height, ElementName=controlPanelRow}"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="2"
                        BorderThickness="0"/>
            </Grid>-->

            <Grid x:Name="canvas"
                  Grid.Row="5"
                  Background="{Binding Background, ElementName=main}">

                <Grid HorizontalAlignment="Center"
                      VerticalAlignment="Center">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="10"/>
                        <RowDefinition MinHeight="30"/>
                        <RowDefinition MinHeight="30"/>
                        <RowDefinition Height="10"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition MinWidth="30"/>
                        <ColumnDefinition MinWidth="30"/>
                        <ColumnDefinition Width="10"/>
                    </Grid.ColumnDefinitions>

                    <!--<Button Grid.Row="0" Grid.Column="0" IsHitTestVisible="False" BorderThickness="0"/>
                    <Button Grid.Row="3" Grid.Column="0" IsHitTestVisible="False" BorderThickness="0"/>
                    <Button Grid.Row="3" Grid.Column="3" IsHitTestVisible="False" BorderThickness="0"/>
                    <Button Grid.Row="0" Grid.Column="3" IsHitTestVisible="False" BorderThickness="0"/>-->

                    <!--<Button Grid.Row="1" Content="+" BorderThickness="0"/>
                    <Button Grid.Row="2" Content="-" BorderThickness="0"/>

