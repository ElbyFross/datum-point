                        <Label FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center" Content="+"/>
                    </Button>
                    <Button Grid.Row="2" Grid.Column="3" Content="-" BorderThickness="0"/>

                    <Button Grid.Row="0" Grid.Column="2" Content="+" BorderThickness="0"/>
                    <Button Grid.Row="0" Grid.Column="1" Content="-" BorderThickness="0"/>

                    <Button Grid.Row="3" Grid.Column="2" Content="+" BorderThickness="0"/>
                    <Button Grid.Row="3" Grid.Column="1" Content="-" BorderThickness="0"/>-->

                    <StackPanel Orientation="Vertical"
                                Grid.Row="1" Grid.RowSpan="2" 
                                Grid.Column="1" Grid.ColumnSpan="2">
                        <StackPanel Orientation="Horizontal">
                            <local:Seat Index="1"/>
                            <local:Seat/>
                            <local:Seat Opacity="0.1"/>
                            <local:Seat/>
                            <local:Seat/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal">
                            <local:Seat/>
                            <local:Seat/>
                            <local:Seat Opacity="0.1"/>
                            <local:Seat/>
                            <local:Seat/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal">
                            <local:Seat/>
                            <local:Seat/>
                            <local:Seat Opacity="0.1"/>
                            <local:Seat/>
                            <local:Seat/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal">
                            <local:Seat/>
                            <local:Seat/>
                            <local:Seat Opacity="0.1"/>
                            <local:Seat Opacity="0.1"/>
                            <local:Seat Opacity="0.1"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <local:Seat/>
                            <local:Seat/>
                            <local:Seat Opacity="0.1"/>
                            <local:Seat/>
                            <local:Seat/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <local:Seat/>
                            <local:Seat/>
                            <local:Seat Opacity="0.1"/>
                            <local:Seat/>
                            <local:Seat/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <local:Seat/>
                            <local:Seat/>
                            <local:Seat Opacity="0.1"/>
                            <local:Seat/>
                            <local:Seat/>
                        </StackPanel>

                    </StackPanel>
                </Grid>
                
                
            </Grid>
        </Grid>

        <!--Help overlay-->
        <Grid x:Name="helpOverlayBackplate"
              Background="Transparent" 
              Opacity="0"
              Grid.ColumnSpan="4" 
              IsHitTestVisible="False"
              Margin="-1.5"/>

        <Grid x:Name="helpOverlay"
              Margin="10,30,10,10" 
              Opacity="0"
              IsHitTestVisible="False">
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition/>
                <ColumnDefinition x:Name="instructionsColumn" Width="290"/>
            </Grid.ColumnDefinitions>


            <Grid x:Name="instructions"
                       Grid.Column="2"
                       Background="WhiteSmoke"
                       VerticalAlignment="Bottom">
                <Grid.RowDefinitions>
                    <RowDefinition Height="27"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid Background="White" Margin="2,2,2,2"/>
                <Label Content="How to use?" 
                       FontWeight="Thin"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

                <ListBox Grid.Row="1" BorderThickness="0" Background="Transparent">
                    <TextBlock TextWrapping="Wrap" 
                               Width="278" 
                               Text="-ExampleExampleExampleExampleExampleExample ExampleExampleExampleExampleExample"/>
                    <TextBlock TextWrapping="Wrap" 
                               Width="278" 
                               Text="-ExampleExampleExampleExampleExampleExample ExampleExampleExampleExampleExample"/>
                    <TextBlock TextWrapping="Wrap" 
