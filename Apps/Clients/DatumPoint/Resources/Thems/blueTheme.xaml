<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:DP"
                    xmlns:controls="clr-namespace:WpfHandler.UI.Controls;assembly=WpfHandler">


    <Style x:Key="Header" TargetType="Grid">
        <Setter Property="Background" Value="#00A8E8" />
    </Style>

    <Style x:Key="MenuButton" TargetType="controls:CatalogButton">
        <Setter Property="UnfocusedBackgroundColor" Value="Transparent" />
        <Setter Property="FocusedBackgroundColor" Value="#00A8E8" />
        <Setter Property="TextColor" Value="#FFFFFF" />
    </Style>

    <Style x:Key="FlatTextBox" TargetType="controls:FlatTextBox">
        <Setter Property="Background" Value="#FFFFFF" />
        <Setter Property="TextBoxForeground" Value="#FFFFFF" />
        <Setter Property="TextBoxBackground" Value="#00a9e9" />
    </Style>

    <Style x:Key="FlatPasswordBox" TargetType="controls:FlatPasswordBox">
        <Setter Property="Background" Value="#FFFFFF" />
        <Setter Property="TextBoxForeground" Value="#FFFFFF" />
        <Setter Property="TextBoxBackground" Value="#00a9e9" />
    </Style>

    <Style x:Key="FlatButton" TargetType="controls:FlatButton">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="#003459" />
    </Style>

</ResourceDictionary>
    