<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:DP"
                    xmlns:controls="clr-namespace:WpfHandler.UI.Controls;assembly=WpfHandler">


    <Style x:Key="Header" TargetType="Grid">
        <Setter Property="Background" Value="#00A8E8" />
    </Style>

    <Style x:Key="MenuButton" TargetType="controls:CatalogButton">
        <Setter Property="UnfocusedBackgroundColor" Value="Transparent" />
        <Setter Property="FocusedBackgroundColor" Value="#00A8E8" />
        <Setter Property="TextColor" Value="#FFFFFF" />
    </Style>
    
</ResourceDictionary>